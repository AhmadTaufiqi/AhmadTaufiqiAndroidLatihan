<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".MainActivity">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="APP TELPON DARURAT!!!"
    android:textSize="25dp"
    android:textStyle="bold"
    android:textColor="@color/colorWaring"
    android:textAlignment="center"
    android:layout_marginBottom="20dp"

    />

    <Button
        android:id="@+id/btn_sms"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button"
        android:text="@string/sms_activity"

        android:textColor="@color/colorWhite"/>

    <Button
        android:id="@+id/btn_dial_polisi"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="20dp"
        android:text="@string/dial_polisi"
        android:background="@drawable/button"
        android:textColor="@color/colorWhite"
        />
    <Button
        android:id="@+id/btn_dial_ayah"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="20dp"
        android:text="@string/dial_ayah"
        android:background="@drawable/button"
        android:textColor="@color/colorWhite"
        />
    <Button
        android:id="@+id/btn_dial_ibu"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="110dp"
        android:layout_marginTop="20dp"
        android:text="@string/dial_ibu"
        android:background="@drawable/button"
        android:textColor="@color/colorWhite"

        />

</LinearLayout>