<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button_primary" >
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="text_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#5675E4</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="text_header.smaller">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="text_content">
        <item name="android:textSize">12dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>

    <style name="text_content.title">
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginLeft">20dp</item>

    </style>


</resources>
